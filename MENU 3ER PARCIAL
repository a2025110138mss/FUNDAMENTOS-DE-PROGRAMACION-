#include <iostream>
#include <cmath>
#define MAX 100

using namespace std;

void dist(int x1, int y1, int x2, int y2);
void impares(int n);
void notas(int vec[], int n);

int main() {
    int vec[MAX], n, x1, y1, x2, y2, opcion;
    do {
        cout << endl;
        cout << "1.- Suma de los N primeros numeros impares" << endl;
        cout << "2.- Calcula la distancia entre 2 puntos" << endl;
        cout << "3.- Notas de N estudiantes" << endl;
        cout << "0.- Salir" << endl;
        cout << "Seleccione una opcion: ";
        cin >> opcion;

        switch (opcion) {
        case 1:
            cout << "Ingrese un numero: ";
            cin >> n;
            impares(n);
            break;
        case 2:
            cout << "Ingrese las coordenadas del P1(x1,y1): ";
            cin >> x1 >> y1;
            cout << "Ingrese las coordenadas del P2(x2,y2): ";
            cin >> x2 >> y2;
            dist(x1, y1, x2, y2);
            break;
        case 3:
            cout << "Ingrese el numero de alumnos: ";
            cin >> n;
            notas(vec, n);
            break;
        case 0:
            cout << "Saliendo del programa..." << endl;
            break;
        default:
            cout << "Opcion incorrecta, intente nuevamente." << endl;
        }
    } while (opcion != 0);

    return 0;
}

void impares(int n) {
    int suma = 0;
    int numeroImpar = 1;
    for (int i = 1; i <= n; i++) {
        suma += numeroImpar;
        numeroImpar += 2;
    }
    cout << "La suma de los " << n << " primeros numeros impares es: " << suma << endl;
}

void dist(int x1, int y1, int x2, int y2) {
    double distancia;
    distancia = sqrt(pow(x2 - x1, 2) + pow(y2 - y1, 2));
    cout << "La distancia entre los puntos es: " << distancia << endl;
}

void notas(int vec[], int n) {
    float suma = 0, promedio, max, min;
    for (int i = 0; i < n; i++) {
        cout << "Nota del estudiante " << i + 1 << ": ";
        cin >> vec[i];
    }

    max = min = vec[0];  

    for (int i = 0; i < n; i++) {
        suma += vec[i];
        if (vec[i] > max) max = vec[i];
        if (vec[i] < min) min = vec[i];  
    }

    promedio = suma / n;
    cout << "Promedio general: " << promedio << endl;
    cout << "Nota más alta: " << max << endl;
    cout << "Nota más baja: " << min << endl;
}
