#include <iostream>

using namespace std;
int main()
{
	int opcion, cantidad;
	float suma=0, ingreso, precio;
	do {
		cout << "Menu" << endl;

		cout << "1.Hamburguesa clasica" << endl;
		cout << "2.Hamburguesa Bacon" << endl;
		cout << "3.Papas fritas" << endl;
		cout << "4.Soda" << endl;
		cout << "0. Salir" << endl;
		cout << "Ingrese una opcion: ";
		precio = 0;
		cin >> opcion;
		switch (opcion) {
		case 1: precio = 3;
			break;
		case 2:precio = 5;
			break;
		case 3: precio = 2;
			break;
		case 0:cout << "Salir" << endl;
			break;
		default:
			cout << "Error" << endl;
		}
		if (precio > 0) {
			cout << "Ingrese la cantidad: ";
			cin >> cantidad;
			ingreso = cantidad * precio;
			suma = suma + ingreso;
		}
	} while (opcion != 0); //Do-while sale por falso 
	cout << "El monto total a pagar es: " << suma;
	return 0;
		
}
