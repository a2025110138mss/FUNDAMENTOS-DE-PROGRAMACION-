Algoritmo Menu
	suma <- 0
	Repetir
		Escribir "MENU"
		Escribir "1.Hamburguesa clasica"
		Escribir "2.Hamburguesa Bacon"
		Escribir "3.Papas fritas"
		Escribir "4.Soda"
		Escribir "0.Salir"
		Escribir "Ingrese una opcion: "
		precio <- 0
		Leer Opcion
		Segun Opcion Hacer
			1:
				Precio <- 3
			2:
				Precio <- 5
			3:
				Precio <- 2
			4:
				Precio <- 2.5
			0:
				Escribir "Salir"
			De Otro Modo:
				Escribir "Error"
		FinSegun
		Si precio>0 Entonces
			Escribir "Ingrese la cantidad: "
			Leer cantidad
			ingreso <- cantidad*precio
			suma <- suma+ingreso
		FinSi
	Hasta Que opcion =0
	Escribir "El monto total a pagar es: ", suma
FinAlgoritmo
