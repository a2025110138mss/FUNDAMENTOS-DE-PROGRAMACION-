#include <iostream>
#define MAX 100

using namespace std;
float promedio(int vec[], int n);
void cargar(int vec[], int n);
void clasificar(int vec[], int n);
void mostrar(int vec[], int n);
int main() {
    int n, vec[MAX], opcion;
    do {
        cout << "Ingresar el tamaño del vector:";
        cin >> n;
    } while ((n <= 0) || (n > MAX));
    do {
        cout << "1 para cargar" << endl;
        cout << "2 para clasificar" << endl;
        cout << "3 para mostrar" << endl;
        cout << "4 para promedio" << endl;
        cout << "0 para salir" << endl;
        cin >> opcion;

        switch (opcion) {
        case 1:
            cargar(vec, n);
            break;
        case 2:
            cout << "clasificando..." << endl;
            cout << "ya esta clasificado, presione 3 si desea ver" << endl;
            clasificar(vec, n);
            break;
        case 3:
            mostrar(vec, n);
            break;
        case 4:
            cout << "El promedio es " << promedio(vec, n) << endl;
            break;
        case 0:
            cout << "Saliendo." << endl;
            break;
        default:
            cout << "Opción no válida. Intente de nuevo." << endl;
        }
    } while (opcion != 0);

    return 0;
}
void cargar(int vec[], int n)
{
    for (int i = 0; i < n; i++)
    {
        cout << "Vector[" << i << "]= ";
        cin >> vec[i];
    }
}

void mostrar(int vec[], int n)
{
    for (int i = 0; i < n; i++)
        cout << "Vector[" << i << "]= " << vec[i] << endl;
}
float promedio(int vec[], int n)
{
    float suma = 0;
    for (int i = 0; i < n; i++)
        suma += vec[i];
    return suma / n;
}
void clasificar(int vec[], int n)
{
    for (int i = 0; i < n - 1; i++)
        for (int j = i; j < n; j++)
        {
            if (vec[i] > vec[j]) {
                int temp = vec[i];
                vec[i] = vec[j];
                vec[j] = temp;
            }
        }
}
