#include <iostream>
using namespace std;
int main()
{
    int n, digito, suma=0;
    do {
    cout<<"Escriba un numero: ";
    cin>>n;
    }while(n<0);
    while(n>0){
        digito=n%10;
        n=n/10;
        suma= suma + digito;
    }
    cout<<"La suma de los digitos es: "<<suma;
    return 0;
}
